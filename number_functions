//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~Συνάρτηση του Τέσσερα~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
void tessera(){
  digitalWrite(8, HIGH);
  digitalWrite(9, HIGH);
  digitalWrite(12, HIGH);
  digitalWrite(13, HIGH);
  
  kinishXd();
 
  akroPros0();
 
  kinishYk();
  delay(50);
  kinishXd4(); //Μια κίνηση δεξιά κατα 2 cm
  delay(50);
  kinishYp4();
  delay(50);
  kinishYk4();
  delay(50);
  kinishYk4();
  delay(50);
 
  akroPros180();
  
  digitalWrite(8, LOW);
  digitalWrite(9, LOW);
  digitalWrite(12, LOW);
  digitalWrite(13, LOW);
}
