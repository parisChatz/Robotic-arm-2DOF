//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~Συνάρτηση του Τρία~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
void tria(){
  digitalWrite(7, HIGH);
  digitalWrite(8, HIGH);
  digitalWrite(9, HIGH);
  digitalWrite(10, HIGH);
  digitalWrite(13, HIGH);
  
  kinishYp(); //Δύο διαδοχικές κινήσεις προς τα επάνω κατα 3 cm   
  
  
  akroPros0();
  
  kinishXd3(); //Μια κίνηση δεξιά κατα 2 cm
  delay(50);
  kinishYk();
  delay(50);
  kinishXa();
  delay(50);
  kinishXd();
  delay(50);
  kinishYk();
  delay(50);
  kinishXa3(); //Μια κίνηση αριστερά κατα 2 cm
  delay(500);

  akroPros180();
  
  digitalWrite(7, LOW);
  digitalWrite(8, LOW);
  digitalWrite(9, LOW);
  digitalWrite(10, LOW);
  digitalWrite(13, LOW);
}
