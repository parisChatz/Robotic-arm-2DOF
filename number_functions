//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~Συνάρτηση του Ένα~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
void ena(){
  digitalWrite(8, HIGH);
  digitalWrite(9, HIGH);
  
  
  kinishYp(); //Δύο διαδοχικές κινήσεις προς τα επάνω κατα 3 cm  
  kinishYp();   
  kinishXd(); //Μια κίνηση δεξιά κατα 2 cm

  akroPros0(); //Κατεβαίνει η γραφίδα 
  
  kinishYk(); //Δύο διαδοχικές κινήσεις προς τα κάτω κατα 3 cm
  delay(50);   
  kinishYk();
  delay(50);
  
  akroPros180();
  digitalWrite(8, LOW);
  digitalWrite(9, LOW);
}
