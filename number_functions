//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~Συνάρτηση του Εννιά~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
void ennia(){
  digitalWrite(7, HIGH);
  digitalWrite(8, HIGH);
  digitalWrite(9, HIGH);
  digitalWrite(12, HIGH);
  digitalWrite(13, HIGH);
  
 
  akroPros0();
  
 
  kinishYp();
  delay(50);
  kinishXd(); //Μια κίνηση δεξιά κατα 2 cm
  delay(50);
  kinishYk(); //Δύο διαδοχικές κινήσεις προς τα κάτω κατα 3 cm
  kinishYk();
  delay(50);
  kinishXa(); //Μια κίνηση αριστερά κατα 2 cm
  delay(50);
  kinishYp4(); //Μια κίνηση προς τα επάνω κατα 1.5 cm
  delay(50);
  kinishXd6(); //Μια κίνηση δεξιά κατα 2 cm
  delay(50);
 
  akroPros180();
  
  digitalWrite(7, LOW);
  digitalWrite(8, LOW);
  digitalWrite(9, LOW);
  digitalWrite(12, LOW);
  digitalWrite(13, LOW);
}
